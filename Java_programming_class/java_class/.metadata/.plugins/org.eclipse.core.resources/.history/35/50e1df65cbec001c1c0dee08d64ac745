package finalterm.arraylist;

import java.util.Arrays;

interface ArrayService {

	public void add(int n);

	public int get(int n);

	public boolean find(int n);

	public boolean remove(int n);

	public void resize();

	public int size();

	boolean isEmpty();
}

public class MyArray implements ArrayService {

	int arr[];
	int length;
	int size;

	MyArray(int length) {
		this.length = length;
		arr = new int[length];
		size = 0;
	}

	@Override
	public void add(int n) {
		// TODO Auto-generated method stub
		if (size == length-1) {
			resize();
		}
		arr[size] = n;
		size++;
	}

	@Override
	public int get(int n) {
		// TODO Auto-generated method stub
		// Get By Array Index
		if (n >= size || n < 0) {
			return -1;
		}
		return arr[n];
	}

	@Override
	public boolean find(int n) {
		// TODO Auto-generated method stub
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] == n) {
				return true;
			}
		}
		return false;
	}

	@Override
	public boolean remove(int n) {
		// TODO Auto-generated method stub
		int index = -1;
		for (int i = 0; i < size; i++) {
			if (arr[i] == n) {
				index = i;
				break;
			}
		}
		if (index == -1) {
			return false;
		}
		int temp[] = new int[arr.length];
		System.arraycopy(arr, 0, temp, 0, index);
		System.arraycopy(arr, index+1, temp, index, arr.length - (index+1));
		arr = temp;
		size--;
		System.out.println(Arrays.toString(arr));
		return true;

	}

	@Override
	public void resize() {
		// TODO Auto-generated method stub
		// Increase array * 2
		int temp[] = new int[length * 2];
		System.arraycopy(arr, 0, temp, 0, size);
		arr = temp;

	}

	@Override
	public int size() {
		// TODO Auto-generated method stub
		return size;
	}
	
	@Override
	public boolean isEmpty() {
		// TODO Auto-generated method stub
		if (size !=0) {
			return true;
		}
		return false;
	}

	@Override
	public String toString() {
		return "MyArray [arr=" + Arrays.toString(arr) + "]";
	}

	public static void main(String[] args) {
		MyArray ob = new MyArray(2);
		ob.add(2);
		ob.add(3);
		ob.add(3);
		System.out.println("Display : " + ob.toString());
		System.out.println("Find : " + ob.find(1));
		// Get By Array Index
		System.out.println("Get : " + ob.get(2));
		System.out.println("Remove : " + ob.remove(3));
		System.out.println("Size : " + ob.size());
		ob.add(4);
		System.out.println("Display : " + ob.toString());
		System.out.println("Size : " + ob.size());

	}


}
