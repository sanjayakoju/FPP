//			throw new UnsupportedOperationException("not in the range of 0-100");
//		}
//		
		
	}

	public static void main(String[] args) {
		Prob1 ob = new Prob1();
		try {
			ob.getInput();
		} catch (Exception e) {
			// TODO: handle exception
			System.out.println(e.getMessage());
