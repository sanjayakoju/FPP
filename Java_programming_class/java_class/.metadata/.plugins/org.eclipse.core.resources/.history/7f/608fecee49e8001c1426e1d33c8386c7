package assignment9.prob2;


//User Implementation of Stack 
interface Stack1 {
	public void push(Object ob);

	public Object pop();

	public Object peek();

	public boolean isEmpty();

	public int size();
}


public class LinkedListStack implements Stack1 {
	Node top;
	
	public LinkedListStack() {
		this.top = null;
	}
	
	class Node {
		Object data;
		Node link;
	}

	@Override
	public void push(Object ob) {
		// TODO Auto-generated method stub
		Node temp = new Node();
		
		 if (temp == null) {
			 System.out.println("Heap Overflow");
			 return;
		 }
		 temp.data = ob;
		 temp.link = top;
	}

	@Override
	public Object pop() {
		// TODO Auto-generated method stub
		if (top == null) {
			System.out.println("Stack Ubdeflow");
			return -1;
		} else {
			return top = top.link;
		}
	}

	@Override
	public Object peek() {
		// TODO Auto-generated method stub
		System.out.println(top);
		if (!isEmpty()) {
			return top.data;
		} else {
			System.out.println("Stack is empty");
			return -1;
		}	
	}

	@Override
	public boolean isEmpty() {
		// TODO Auto-generated method stub
		if (top == null) {
			return false;
		}
		return true;
	}

	@Override
	public int size() {
		// TODO Auto-generated method stub
		return 0;
	}

}
